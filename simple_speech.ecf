	<target name="demo_embed" extends="simple_speech">
		<root class="DEMO_EMBED" feature="make"/>
		<setting name="console_application" value="true"/>
		<cluster name="demo_app" location=".\testing\"/>
	</target>
	<target name="speech_studio" extends="simple_speech">
		<root class="SPEECH_STUDIO_APP" feature="make"/>
		<setting name="console_application" value="false"/>
		<setting name="executable_name" value="speech_studio"/>
		<capability>
			<concurrency support="scoop"/>
		</capability>
		<library name="simple_vision" location="$SIMPLE_EIFFEL\simple_vision\simple_vision.ecf"/>
		<library name="vision2" location="$ISE_LIBRARY\library\vision2\vision2.ecf"/>
